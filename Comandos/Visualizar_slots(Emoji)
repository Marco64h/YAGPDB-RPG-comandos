//Este comando n√£o precisa ser executado por um comando, ele vai funcionar sempre que <profiles for utilizado

{{$user := .User.ID}}
{{$data := dbGet $user "profile_msg"}}
{{if $data}}
  {{$d := sdict $data.Value}}
  {{if eq .Message.ID $d.msgID}}
    {{$count := $d.count}}

    {{if eq .Reaction.Emoji.Name "üëâ"}}
      {{$count = add $count 1}}
    {{else if eq .Reaction.Emoji.Name "üëà"}}
      {{$count = sub $count 1}}
    {{end}}

    {{$profileK := printf "profile%d" $count}}
    {{$profile := dbGet $user $profileK}}
    {{if $profile}}
      {{$stats := sdict $profile.Value}}
      {{$color := or ($stats.Get "cor") (randInt 0 16777215)}}
	
      {{$embed := cembed "title" (joinStr "" ($stats.Get "nome") " | " $profileK) "description" (joinStr "" "**```ansi\n[2;30m‚îè‚îÅ‚îÅ‚îÖ‚îÖ‚îÖ‚îÑ‚îÑ‚üû‚ü¶[2;33m‚úÆ[2;30m‚üß‚üù‚îÑ‚îÑ‚îâ‚îâ‚îÖ‚îÅ‚îÅ‚îì\n[2;30m‚î£üíó[2;38m‚ä∞‚©•[2;30m‚ù™[2;35mHP[2;30m‚ù´„Äé[2;31m" ($stats.Get "HP") " [2;30m| [2;31m" ($stats.Get "MaxHP") "[2;30m„Äè\n‚î£üîµ[2;38m‚ä∞‚©•[2;30m‚ù™[2;36mMP[2;30m‚ù´„Äé[2;34m" ($stats.Get "Energia") " [2;30m| [2;34m" ($stats.Get "MaxEnergia") "[2;30m„Äè\n‚î£üí†[2;38m‚ä∞‚©•[2;30m‚ù™[2;32mRD[2;30m‚ù´„Äé[2;33m" ($stats.Get "RD") "% [2;30m| [2;33m" ($stats.Get "Escudo") "[2;30m„Äè\n‚îó‚îÅ‚îÅ‚îÖ‚îÖ‚îÖ‚îÑ‚îÑ‚üû‚ü¶[2;33m‚úÆ[2;30m‚üß‚üù‚îÑ‚îÑ‚îâ‚îâ‚îÖ‚îÅ‚îÅ‚îõ```**" "\n**```ansi\n[2;36müåê‚ä∞‚©•[2;30m„Äê[2;33mùêçùê¢ùêØùêûùê•: [2;37m" ($stats.Get "Nivel") "[2;30m„Äë\nüß†[2;36m‚ä∞‚©•[2;30m„Äê[2;35mùêíùêöùêßùê¢ùêùùêöùêùùêû: [2;37m" ($stats.Get "Sanidade") "[2;30m„Äë```**" "\n**```ansi\n[2;30m‚ï≠‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚ïÆ\n[2;30m‚îÇüëä[2;38m‚ä∞‚©•[2;34m„Äå[2;31mFor√ßa: [2;37m" ($stats.Get "DanoFis") "\n[2;30m‚îÇ‚ú®Ô∏è[2;38m‚ä∞‚©•[2;34m„Äå[2;36mPoder: [2;37m" ($stats.Get "DanoMa") "\n[2;30m‚ï∞‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚ïØ```**") "thumbnail" (sdict "url" ($stats.Get "foto")) "color" $color}}
      {{editMessage nil $d.msgID $embed}}
      {{dbSet $user "profile_msg" (sdict "msgID" $d.msgID "count" $count)}}
	{{else}}
	{{$embedfail := cembed "description" (print ":x: Perfil n√£o encontrado: " $profileK) "color" 15158332}}
	{{editMessage nil $d.msgID $embedfail}}
      {{dbSet $user "profile_msg" (sdict "msgID" $d.msgID "count" $count)}}
    {{end}}
  {{end}}
{{end}}
